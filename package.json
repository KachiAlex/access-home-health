{
  "$schema": "./schemas/package.schema.json",
  "name": "access-health-platform",
  "private": true,
  "workspaces": [
    "apps/web",
    "apps/api"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace web",
    "dev:api": "npm run start:dev --workspace api",
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\"",
    "build": "npm run build --workspace api && npm run build --workspace web",
    "start": "npm run start --workspace web",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "lightningcss": "^1.31.1",
    "prettier": "3.2.4"
  },
  "overrides": {
    "@tailwindcss/node": {
      "lightningcss": "^1.31.1"
    }
  }
}
