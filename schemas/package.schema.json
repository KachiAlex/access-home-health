{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Local package.json schema placeholder",
  "type": "object",
  "description": "Lightweight schema used offline to silence remote schema fetch warnings.",
  "properties": {
    "name": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "private": {
      "type": "boolean"
    },
    "workspaces": {
      "type": "array",
      "items": {
        "type": ["string", "object"]
      }
    },
    "scripts": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "dependencies": {
      "type": "object",
      "additionalProperties": {
        "type": ["string", "object"]
      }
    },
    "devDependencies": {
      "type": "object",
      "additionalProperties": {
        "type": ["string", "object"]
      }
    }
  },
  "additionalProperties": true
}
