rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Return true if the authenticated user's email is one of the admin emails
    function isAdmin() {
      return request.auth != null && request.auth.token.email in [
        'admin@accesshomehealth.com',
        'admin@accesshomehealthsupplies.com'
      ];
    }

    // Allow reading product images to anyone, but only admins may write
    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Deny write access by default for other paths
    match /{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
